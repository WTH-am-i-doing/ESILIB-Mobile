       FlyoutBehavior="Disabled">

    <FlyoutItem Title="ESILIB">
        <ShellContent Title="Home">
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource Key=Solid}" Glyph="&#xf015;"/>
            </ShellContent.Icon>
            <pages:Home />
        </ShellContent>
        <ShellContent Title="All">
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource Key=Solid}" Glyph="&#xf5db;"/>
            </ShellContent.Icon>
            <pages:Catalogue/>
        </ShellContent>
        <ShellContent Title="Profile">
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource Key=Solid}" Glyph="&#xf2bd;"/>
            </ShellContent.Icon>
            <pages:Profile/>
        </ShellContent>
    </FlyoutItem>
</Shell>
