<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESILib.Pages.ProfilePages.Login">

    <ScrollView>
        <StackLayout Padding="32"  VerticalOptions="Center">
            <Label Text="Welcome To ESI-LIB" TextColor="#5d26ca" FontAttributes="Bold"  FontSize="26" Margin="0,0,0,16"/>
            <Label Text="Email" TextColor="#5d26ca"/>
            <Entry x:Name="Email"/>
            <Label Text="Password" TextColor="#5d26ca"/>
            <Entry x:Name="Password"/>
            <Button Text="Login" BackgroundColor="#5d26ca" Clicked="Button_Clicked_1"/>
            <BoxView Margin="60,20" HeightRequest="1" Color="LightGray"/>
            <Button Text="Register" BackgroundColor="Coral" Clicked="Button_Clicked_2"/> 
            <Button TextColor="Black" Clicked="Button_Clicked" Text="Login With Google" BackgroundColor="GreenYellow"/>

        </StackLayout>
    </ScrollView>
            
</ContentPage>