             x:Class="ESILib.Views.UserSmallView">
    <Frame Margin="16" VerticalOptions="StartAndExpand">
        <StackLayout Orientation="Horizontal" Spacing="18">
            <Frame Padding="0" IsClippedToBounds="False" CornerRadius="12">
                <Image Source="https://dribbble.com/shots/11369956/attachments/2982716?mode=media" WidthRequest="100" HeightRequest="100"/>
            </Frame>
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Fill">
                <Label Text="User Name" TextColor="Black" FontSize="24" FontAttributes="Bold"/>
                <Label Text="Student Of ESI-SBA" TextColor="Black" FontSize="18" />
            </StackLayout>
        </StackLayout>
    </Frame>
</ContentView>